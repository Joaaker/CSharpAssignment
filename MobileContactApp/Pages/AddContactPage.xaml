<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileContactApp.Pages.AddContactPage"
             xmlns:viewmodels="clr-namespace:MobileContactApp.ViewModels"
             
             x:DataType="{x:Type viewmodels:AddContactViewModel}"
             Title="AddContactPage">

    <ScrollView>
        <Grid>
            <VerticalStackLayout Grid.Row="0" Margin="10">
                <Label Text="Add a new contact" Margin="10"/>

                <Label Text="First Name" Margin="0, 10"/>
                <Entry/>

                <Label Text="Last Name" Margin="0, 10"/>
                <Entry/>

                <Label Text="Email" Margin="0, 10"/>
                <Entry/>

                <Label Text="Phone Number" Margin="0, 10"/>
                <Entry/>

                <Label Text="Address" Margin="0, 10"/>
                <Entry/>

                <Label Text="Zip Code" Margin="0, 10"/>
                <Entry/>

                <Label Text="City" Margin="0, 10"/>
                <Entry/>
                <Button Text="Save" BackgroundColor="Green" Margin="20"/>
                <Button Text="Back" BackgroundColor="Red" Margin="20" Command="{Binding NavigateToMainPageCommand}"/>
                
                


            </VerticalStackLayout>

        </Grid>
        
            
        
    </ScrollView>
</ContentPage>