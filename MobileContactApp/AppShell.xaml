<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileContactApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobileContactApp"
    
    xmlns:pages="clr-namespace:MobileContactApp.Pages"
    
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False"
    Title=".NET MAUI Contact App">

    <ShellContent Title="MainPage" Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}"/>
    <ShellContent Title="Edit contact page" Route="EditContactPage" ContentTemplate="{DataTemplate pages:EditContactPage}"/>
    <ShellContent Title="Add contact page" Route="AddContactPage" ContentTemplate="{DataTemplate pages:AddContactPage}"/>


</Shell>
